{
  "manifest_version": 3,
  "name": "Reveal Password (Context Menu)",
  "version": "1.0.0",
  "description": "Adds a context menu option to reveal the focused password field as plain text (and toggle back).",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Reveal Password"
  }
}
